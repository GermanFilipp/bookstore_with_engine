<table class="table table-condensed">
  <thead>
  <tr>
    <th colspan="2">BOOK</th>
    <th>PRICE</th>
    <th>QTY</th>
    <th>TOTAL</th>
  </tr>
  </thead>
  <tbody>
  <% order_items.each do |item|%>
     <tr>
       <td><%= link_to(image_tag(item.product.image.thumb, :alt => item.product.title), main_app.book_path(item.product)) %></td>
       <td>
         <div><%= item.product.title %></div>
         <p><%= item.product.description %></p>
       </td>
       <td class="price"><%= number_to_currency(item.price) %></td>
       <td class="quantity"><%= item.quantity%></td>
       <td class="price"><%= number_to_currency(item.price*item.quantity) %></td>
     </tr>
  <% end %>
  </tbody>
</table>
