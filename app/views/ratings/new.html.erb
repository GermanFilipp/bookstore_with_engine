<div class="row">

  <h1>New review for <%= @book.title %> </h1>
     <%= form_tag(book_ratings_path) %>

        <%= text_field_tag 'ratings[title]',nil, cols:10, rows:10, class:"col-md-4 col-md-offset-4", placeholder: 'Enter title' %>

        <%= text_area_tag 'ratings[review]', nil, cols:10, rows:10, class:"col-md-4 col-md-offset-4", placeholder: 'Enter review' %>

        <%= number_field_tag "ratings[rating]",nil,in: 1..10, class:"col-md-1 col-md-offset-5", placeholder: 'Enter rating'%>

        <%= submit_tag "Submit", class: "btn btn-large btn-primary  col-md-4 col-md-offset-4" %>
</div>