<div class="settings clearfix">
  <h1>Settings</h1>
  <div class="row">
    <div class="col-md-6 col-lg-3 col-lg-offset-2">
      <h2>BILLING ADDRESS</h2>
      <%= form_tag customer_path, method: :put do %>
	      <%= fields_for  :billing_address, @billing_address do |f| %>
	         <%= render partial: 'shared/errors', locals:{ entity: [@billing_address] }  %>
	         <%= render partial: 'order_steps/address_form', address: @billing_address, locals: {f: f}%>
	      <%end%>
         <%= submit_tag 'Save', class: 'btn btn-default' %>
      <%end%>
    </div>
    <div class="col-md-6 col-lg-3 col-lg-offset-2">
      <h2>SHIPPING ADDRESS</h2>
      <%= form_tag customer_path, method: :put do %>
	      <%= fields_for :shipping_address, @shipping_address do |f| %>
	         <%= render partial: 'shared/errors', locals:{ entity: [@shipping_address] }  %>
	         <%= render partial: 'order_steps/address_form', address: @shipping_address, locals: {f: f}%>
	      <%end%>
         <%= submit_tag 'Save', class: 'btn btn-default' %>
      <%end%>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-lg-3 col-lg-offset-2">
      <h2>E-MAIL</h2>
      <%= form_tag(customer_path, :method => 'put') do %>
         <%= render partial: 'shared/errors', locals:{ entity: [@customer] }  %>
         <div class="form-group">
           <%= email_field_tag('email[email]', @customer.email, :class => 'form-control', :placeholder => 'Enter email')%>
         </div>
         <%= submit_tag('SAVE', :class => 'btn btn-default') %>
      <% end %>
    </div>
    <div class="col-md-6 col-lg-3 col-lg-offset-2">
      <h2>PASSWORD</h2>
      <%= form_tag(customer_path, :method => 'put', :autocomplete => 'off') do %>
         <%= render partial: 'shared/errors', locals:{ entity: [@customer] }  %>
         <div class="form-group">
           <%= label_tag('password[current_password]', 'Current password')%>
           <%= password_field_tag('password[current_password]', '', :class => 'form-control', :placeholder => 'Type current password') %>
         </div>
         <div class="form-group">
           <%= label_tag('password[password]', 'New password')%>
           <%= password_field_tag('password[password]', '', :class => 'form-control', :placeholder => 'Type new password') %>
         </div>
         <div class="form-group">
           <%= label_tag('password[password_confirmation]', 'New password confirmation')%>
           <%= password_field_tag('password[password_confirmation]', '', :class => 'form-control', :placeholder => 'Type new password confirmation') %>
         </div>
         <%= submit_tag('SAVE', :class => 'btn btn-default') %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-lg-offset-4">
      <h2>REMOVE ACCOUNT</h2>
      <%= form_tag(customer_path, :method => 'delete', :class => 'form-inline') do %>
         <div class="alert_message">You must confirm that you understand the consequences of your action!</div>
         <%= submit_tag('REMOVE ACCOUNT', :class => 'btn btn-default', :id => 'remove_account') %>
         <div class="checkbox">
           <label><%= check_box_tag('remove_account_confirm') %> I understand that all data will be lost</label>
         </div>
      <% end %>
    </div>
  </div>
</div>